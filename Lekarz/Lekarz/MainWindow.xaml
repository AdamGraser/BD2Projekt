<Window x:Class="Lekarz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lekarz" Height="688" Width="525" Closed="Window_Closed">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="logoutMenuItem" Header="Wyloguj się" Click="logoutMenuItem_Click" />
            <MenuItem Header="Pomoc">
                <MenuItem x:Name="aboutMenuItem" Header="O programie" Click="aboutMenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Top" Background="#FFE5E4E2">
            <Label Content="Filtr:"/>
            <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                <Label Content="Imię:" Width="100"/>
                <TextBox x:Name="patientNameTextBox" Width="300" Height="28"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                <Label Content="Nazwisko:" Width="100"/>
                <TextBox x:Name="patientSurnameTextBox" Width="300" Height="28"></TextBox>
            </StackPanel>
            <StackPanel Margin="20,10,20,0" Orientation="Horizontal">
                <Label Content="PESEL:" Width="100" />
                <TextBox Name="patientPeselTextbox" Width="300" Height="28"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"  Margin="20,10,0,20">
                <Button x:Name="findVisitButton" Content="Szukaj" Width="75" Height="28" Click="findVisitButton_Click" />
            </StackPanel>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Background="#FFE5E4E2" Height="65" >
            <StackPanel Orientation="Horizontal" Margin="20,10,0,0" HorizontalAlignment="Center">
                <Button Name="SaveVisit" Content="Zapisz" Padding="4,0,4,0" Height="28" Margin="0,5,0,0" Click="SaveVisit_Click" Width="75" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer DockPanel.Dock="Top" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
        <StackPanel>            
            <ListBox Name="VisitsList" HorizontalAlignment="Stretch" MinHeight="76" Height="76" MaxHeight="76" Margin="20,10,20,10" SelectionChanged="VisitsList_SelectionChanged"></ListBox>
            <Expander Name="VisitExpander" Header="Wizyta" Margin="20,10,20,10" IsEnabled="True" IsExpanded="True" >
            <Grid Margin="20,10,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />                    
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Pierwsza kolumna -->
                <Label Grid.Row="0" Grid.Column="0" Content="Data odbycia wizyty" Margin="0,0,0,5" />
                <Label Grid.Row="1" Grid.Column="0" Content="Imię i nazwisko" Margin="0,0,0,5" />
                <Label Grid.Row="2" Grid.Column="0" Content="Stan wizyty" Margin="0,0,0,5" />
                <Label Grid.Row="3" Grid.Column="0" Content="Opis" Margin="0,0,0,5" />
                

                <!-- Druga kolumna -->
                <TextBlock Grid.Row="0" Grid.Column="1" Name="data_rej" Height="26" Width="auto"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="nazwa_pac" Height="26" Width="auto"></TextBlock>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Name="stan" Width="150" Height="26" Margin="0,0,5,0"></TextBlock>
                    <Button Name="ChangeVisitState" Content="Przyjmij wizytę" Padding="4,0,4,0" Height="26" Click="ChangeVisitState_Click" />
                </StackPanel>
                <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,5">
                    <TextBox Name="opis" Height="auto" MinHeight="26" Width="auto" SpellCheck.IsEnabled="True" Language="pl-PL" TextWrapping="Wrap"></TextBox>                   
                </StackPanel>                              
            </Grid>
            </Expander>
            <Expander Name="diagnosisExpander" Header="Diagnoza" Margin="20,10,20,10" IsEnabled="True" >
                <Grid Margin="20,10,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />                        
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Diagnoza" />
                    <TextBox Grid.Row="0" Grid.Column="1" Name="diagnoza" Height="auto" Width="auto" SpellCheck.IsEnabled="True" Language="pl-PL" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"></TextBox>
                </Grid>
            </Expander>
            <Expander Name="laboratoryTestsExpander" Header="Badania laboratoryjne" Margin="20,10,20,10" IsEnabled="True" >
                <Grid Margin="20,10,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Content="Zleć badania lab." Margin="0,0,0,5" />
                    <StackPanel Grid.Row="0" Grid.Column="1" Name="LaboratoryTests">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ComboBox Grid.Row="0" Grid.Column="0" Name="LabTestsList" Width="150" MinHeight="26" Height="26" MaxHeight="26"></ComboBox>
                            <Label Grid.Row="0" Grid.Column="1" Content="Opis" Margin="5,0,0,0" />
                            <TextBox Grid.Row="0" Grid.Column="2" Name="LabTestDesc" Width="auto" Height="auto" SpellCheck.IsEnabled="True" Language="pl-PL" TextWrapping="Wrap"></TextBox>
                        </Grid>
                        <Button Name="OrderLaboratoryTest" Content="Zleć nowe badanie lab." Padding="4,0,4,0" Height="26" Margin="0,5,0,0" HorizontalAlignment="Center" Click="OrderLaboratoryTest_Click" />
                    </StackPanel>
                </Grid>
            </Expander>
                <Expander Name="phisicalTestsExpander" Header="Badania fizykalne" Margin="20,10,20,10" IsEnabled="True" >
                    <Grid Margin="20,10,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Zleć badania fiz." Margin="0,0,0,5" />
                        <StackPanel Grid.Row="0" Grid.Column="1" Name="PhisicalTests">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Row="0" Grid.Column="0" Name="PhiTestsList" Width="150" MinHeight="26" Height="26" MaxHeight="26"></ComboBox>
                                <Label Grid.Row="0" Grid.Column="1" Content="Opis" Margin="5,0,0,0" />
                                <TextBox Grid.Row="0" Grid.Column="2" Name="PhiTestDesc" Width="auto" Height="auto" SpellCheck.IsEnabled="True" Language="pl-PL" TextWrapping="Wrap"></TextBox>
                            </Grid>
                            <Button Name="OrderPhisicalTest" Content="Zleć nowe badanie fiz." Padding="4,0,4,0" Height="26" Margin="0,5,0,0" HorizontalAlignment="Center" Click="OrderLaboratoryTest_Click" />
                        </StackPanel>
                    </Grid>
                </Expander>
            </StackPanel>
    </ScrollViewer>        
    </DockPanel>
</Window>
